    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [{ "name": "next" }],
    "baseUrl": ".",             // ðŸ‘ˆ add this
    "paths": {
      "@/*": ["./*"]            // ðŸ‘ˆ now @ points to project root
    }
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
, "src/app/gettinguserdata/Educational/page.jsx", "src/app/otp/page.tsx"  ],
  "exclude": ["node_modules"]
}
